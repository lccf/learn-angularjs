doctype html
html
  head
    title 数据绑定
    -var bowerPath = '../bower_components'
  body
    div(ng-app ng-init="qty=1; cost=2")
      b Invoice:
      div
        |Quantity:
        input(type="number", min="0", ng-model="qty")
      div
        |Costs:
        input(type="number", min="0", ng-model="cost")
      div
        b Total:
        span(ng-bind='qty*cost | currency:"CN￥"')

    script(src="#{bowerPath}/angular/angular.js")
